{
  "name": "brewnotes-aws-be",
  "version": "1.0.0",
  "description": "Backend for BrewNotes application",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cd cdk && npx cdk",
    "bootstrap": "cd cdk && npx cdk bootstrap",
    "synth": "cd cdk && npx cdk synth",
    "deploy": "cd cdk && npx cdk deploy --profile brewnotes-cdk",
    "deploy:prod": "cd cdk && npx cdk deploy --profile brewnotes-cdk",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.370.0",
    "@aws-sdk/lib-dynamodb": "^3.370.0",
    "aws-lambda": "^1.0.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.119",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.27",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.2",
    "aws-cdk": "2.88.0",
    "aws-cdk-lib": "2.88.0",
    "constructs": "^10.2.69",
    "esbuild": "^0.18.17",
    "supertest": "^7.1.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "axios": "^1.6.0"
  }
}
